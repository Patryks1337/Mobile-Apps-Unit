<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p1slowinski.carlsexample.MainMenu"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/txLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="LEVEL"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="casual"
        android:text="SCORE"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnA1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:fontFamily="casual"
        android:text="1 + 1 = "
        android:textColor="@android:color/background_light"
        android:textSize="80sp" />

    <Button
        android:id="@+id/btnA1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLevelTry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:width="30sp"
        android:height="80dp"
        android:fontFamily="casual"
        android:text="69"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnA2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnA1"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="69"
        android:height="80dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnA3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnA2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="casual"
        android:text="69"
        android:height="80dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="casual"
        android:text="STAGE"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21sp"
        android:fontFamily="casual"
        android:text="1s"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMainMenu"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:text="Main Menu"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnLevelTry"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMainMenu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:text="Tryagain/NextLevel"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/txHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnA1"
        android:layout_marginBottom="71dp"
        android:layout_toEndOf="@+id/btnA1"
        android:layout_toRightOf="@+id/btnA1"
        android:fontFamily="casual"
        android:text="Highscore: 10"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

</RelativeLayout>
